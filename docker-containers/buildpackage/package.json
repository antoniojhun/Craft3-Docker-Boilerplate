{
    "name": "richcrema",
    "version": "1.0.0",
    "description": "Website for CraftBox",
    "main": "gulpfile.js",
    "author": "Antonio, espresso.richcrema.com <hello@richcrema.com>",
    "license": "MIT",
    "copyright": "richcrema",
    "private": true,
    "paths": {
        "src": {
            "base": "./src/assets/",
            "css": "./src/assets/css/",
            "fontello": "./src/assets/fontello/",
            "fonts": "./src/assets/fonts/",
            "json": "./src/assets/json/",
            "js": "./src/assets/js/",
            "img": "./src/assets/img/",
            "scss": "./src/assets/scss/"
        },
        "dist": {
            "base": "./src/web/assets/",
            "css": "./src/web/assets/css/",
            "js": "./src/web/assets/js/",
            "fonts": "./src/web/assets/fonts/",
            "img": "./src/web/assets/img/"
        },
        "build": {
            "base": "./src/assets/build/",
            "css": "./src/assets/build/css/",
            "fontello": "./src/assets/build/fonts/fontello/",
            "fonts": "./src/assets/build/fonts/",
            "js": "./src/assets/build/js/",
            "html": "./src/assets/build/html/",
            "img": "./src/assets/build/img/"
        },
        "favicon": {
            "src": "./src/assets/img/favicon_src.png",
            "dest": "./src/web/assets/img/site/",
            "path": "/assets/img/site/"
        },
        "scss": [],
        "templates": "./src/templates/"
    },
    "urls": {
        "live": "https://my.website.live/",
        "local": "https://my.website.local/",
        "critical": "https://my.website.live/"
    },
    "vars": {
        "siteCssName": "site.app.min.css",
        "scssName": "app.scss",
        "cssName": "app.css"
    },
    "globs": {
        "distCss": [
            "./node_modules/normalize.css/normalize.css",
            "./src/assets/build/fonts/fontello/css/fontello-codes.css",
            "./src/assets/build/css/*.css",
            "./src/assets/css/*.css"
        ],
        "img": [
            "./src/web/assets/img/"
        ],
        "components": [
            "./src/assets/components/**/*.vue"
        ],
        "fonts": [
            "./src/assets/build/fonts/fontello/font/*.{eot,ttf,woff,woff2}",
            "./src/assets/fonts/*.{eot,ttf,woff,woff2}"
        ],
        "critical": [
            {
                "url": "",
                "template": "index"
            },
            {
                "url": "blog",
                "template": "blog/index"
            },
            {
                "url": "404",
                "template": "404"
            }
        ],
        "download": [
            {
                "url": "https://www.google-analytics.com/analytics.js",
                "dest": "./src/web/assets/js/"
            }
        ],
        "distJs": [
            "./src/assets/build/js/*.js",
            "./node_modules/lazysizes/lazysizes.min.js",
            "./node_modules/lazysizes/plugins/bgset/ls.bgset.min.js",
            "./node_modules/picturefill/dist/picturefill.min.js",
            "./node_modules/vue/dist/vue.min.js",
            "./node_modules/vue-resource/dist/vue-resource.min.js"
        ],
        "babelJs": [
            "./src/assets/js/*.js"
        ],
        "inlineJs": [
            "./node_modules/fg-loadcss/src/loadCSS.js",
            "./node_modules/fg-loadcss/src/cssrelpreload.js"
        ],
        "siteIcon": "./src/assets/img/site/favicon.*"
    },
    "scripts": {
        "lint": "./node_modules/.bin/eslint ./src/assets/js/app.js"
    },
    "dependencies": {
        "@babel/core": "^7.8.7",
        "fg-loadcss": "^1.2.0",
        "lazysizes": "^2.0.6",
        "normalize.css": "^5.0.0",
        "picturefill": "^3.0.2",
        "vue": "^2.6.11",
        "vue-resource": "^1.0.3"
    },
    "devDependencies": {
        "browser-sync": "^2.26.7",
        "chalk": "^1.1.3",
        "critical": "^1.1.0",
        "eslint": "^6.8.0",
        "fancy-log": "^1.2.0",
        "gulp": "4.0.2",
        "gulp-autoprefixer": "^3.1.0",
        "gulp-babel": "^8.0.0-beta.2",
        "gulp-cached": "^1.1.1",
        "gulp-concat": "^2.6.0",
        "gulp-cssnano": "^2.1.2",
        "gulp-debug": "^2.1.2",
        "gulp-download": "^0.0.1",
        "gulp-favicons": "^2.2.6",
        "gulp-filter": "^5.0.1",
        "gulp-fontello": "^0.4.6",
        "gulp-header": "^1.8.7",
        "gulp-if": "^2.0.1",
        "gulp-imagemin": "^3.1.1",
        "gulp-load-plugins": "^1.3.0",
        "gulp-newer": "^1.2.0",
        "gulp-plumber": "^1.1.0",
        "gulp-print": "^2.0.1",
        "gulp-rename": "^1.2.2",
        "gulp-replace": "0.5.4",
        "gulp-rev": "^7.1.0",
        "gulp-sass": "^4.0.2",
        "gulp-size": "^2.1.0",
        "gulp-sourcemaps": "^2.2.1",
        "gulp-streamify": "1.0.2",
        "gulp-uglify": "^1.5.4",
        "moment": "^2.14.1",
        "pa11y": "^4.11.0",
        "vinyl-source-stream": "^1.1.0",
        "vueify": "^8.7.0"
    }
}